body
  font-family: 'Open Sans', sans-serif
  background: image-url("body-bg") repeat-x center 120px

.header
  cursor:         pointer
  height:         190px
  margin-bottom:  70px
  background:     #97c1bd
  position:       relative
  min-height:     190px
  display:        block
  .container
    min-height:  263px
    z-index:     5

.reinder
  width:   170px
  height:  198px
  float:   left

.santa
  width:        140px
  height:       223px
  float:        left
  margin-top:   16px
  margin-left:  10px

.chimney
  float:        left
  margin-top:   113px
  margin-left:  -180px

.header_right
  width: 35%
  float: right
  display: inline-block
  padding-top: 20px
  .logo
    padding: 14px 0 24px

.content-container
  background: image-url("content-container_santa") no-repeat top
  padding: 200px 0 0

.wrapper
  max-width:  93.75em
  margin:     0 auto

.intro div
  background-color: hsla(0,0%,100%,.8)
*, :after, :before
  box-sizing: border-box
p
  margin:         0 0 14px
  margin-top:     0
  margin-bottom:  1rem
h1
  font-family:    'Strait', sans-serif
  font-size:      2.5rem
  margin-bottom:  .5rem
  font-weight:    400
  line-height:    1.2

h2
  font-family:    'Strait', sans-serif
  margin-bottom:  .5rem
  font-size:      2.5em
  font-weight:    500
  line-height:    1.2

.steps
  padding:           25px 20px 20px
  border:            1px solid #e4e2e2
  background-color:  #f6f6f6
  border-radius:     5px

  .accent
    color: #659d98

  a.btn-started
    display:          inline-block
    width:            100%
    height:           44px
    line-height:      44px
    background:       #b3141c
    border:           1px solid #901017
    border-radius:    5px
    text-shadow:      1px 1px 1px #6e070c
    color:            #fff
    text-align:       center
    font-size:        1.2em
    text-decoration:  none

  .text-center
    text-align: center
  ul.liststyle1
    margin:         0 0 16px
    padding:        0
    border-bottom:  1px solid #e8e8e8

    li
      margin:       0 0 12px;
      padding:      0
      list-style:   none;
      line-height:  29px;

      .icon-steps
        display:      inline-block
        height:       29px
        line-height:  29px
        width:        29px
        text-align:   center
        margin-left:  10px
        float:        left
        color:        #fff
        background:   image-url("li_bubble.png") no-repeat 0 0

  .mb-2, .my-2
    margin-bottom: .5rem!important


.col-md-8, .col-sm-8
  position: relative
  width: 100%
  padding-right: 15px
  padding-left: 15px

.col-md-4, .col-sm-4
  position: relative
  width: 100%
  padding-right: 15px
  padding-left: 15px

@media (min-width: 768px)
  .col-md-8
    flex: 0 0 66.66667%
    max-width: 66.66667%

@media (min-width: 576px)
  .col-sm-8
    flex: 0 0 66.66667%
    max-width: 66.66667%

@media (min-width: 768px)
  .col-md-4
    flex: 0 0 33.33%
    max-width: 33.33333%

@media (min-width: 576px)
  .col-sm-4
    flex: 0 0 33.33333%
    max-width: 33.33333%

.container
  max-width:     940px
  padding:       0 30px
  width:         auto
  position:      relative
  margin-right:  auto
  margin-left:   auto

.row
  display:       flex
  margin-right:  -15px
  margin-left:   -15px
  flex-wrap:     wrap

.align-items-center
  align-items: center!important

.footer-santa
  background: image-url("footer-bg_santa.png") no-repeat 100% 0
  padding-top:     65px
  padding-bottom:  35px
  font-size:       1.2em
  text-align:      center
  color: #6e6e6e

@media only screen and (min-width: 768px)
  .form-create-party
    float: left
    width: 30%
    .label
      height: 400px

.form-group
  margin-bottom: 1rem
.form
  display:     block
  margin-top:  0em
